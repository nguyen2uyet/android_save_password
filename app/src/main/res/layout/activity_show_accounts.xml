<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tvGoogleUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLogout"
        app:layout_constraintTop_toTopOf="parent"
        android:text="User"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/tvHello"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="10dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@id/lvAccounts"
        app:layout_constraintTop_toBottomOf="@id/lvAccounts" />
    <Button
        android:id="@+id/btnOpenMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="10dp"
        android:text="Open Music"
        app:layout_constraintStart_toStartOf="@id/lvAccounts"
        app:layout_constraintTop_toBottomOf="@id/btnAdd" />
    <Button
        android:id="@+id/btnStopMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="10dp"
        android:text="Stop Music"
        app:layout_constraintStart_toStartOf="@id/lvAccounts"
        app:layout_constraintTop_toBottomOf="@id/btnOpenMusic" />

    <ListView
        android:id="@+id/lvAccounts"
        android:layout_width="371dp"
        android:layout_height="500dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHello"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="-2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>